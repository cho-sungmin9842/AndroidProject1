<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pointtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plus1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+1"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/pointtv"
        app:layout_constraintTop_toBottomOf="@+id/pointtv" />

    <Button
        android:id="@+id/plus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+2"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/plus1"
        app:layout_constraintTop_toBottomOf="@+id/plus1" />

    <Button
        android:id="@+id/plus3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+3"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/plus2"
        app:layout_constraintTop_toBottomOf="@+id/plus2" />

    <Button
        android:id="@+id/plus4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="+4"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/plus3"
        app:layout_constraintTop_toBottomOf="@+id/plus3" />

</androidx.constraintlayout.widget.ConstraintLayout>